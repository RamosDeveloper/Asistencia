<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.tjappx.asistencia.WaitForApprovalActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imgWaitForApprovalTimeIco"
        android:layout_width="272dp"
        android:layout_height="270dp"
        app:srcCompat="@drawable/ic_access_time_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="74dp" />

    <TextView
        android:id="@+id/txtWaitForApprovalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_waiting_for_approval_text"
        android:textSize="22dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/imgWaitForApprovalTimeIco"
        app:layout_constraintHorizontal_bias="0.0" />
</android.support.constraint.ConstraintLayout>